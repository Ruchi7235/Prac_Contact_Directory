@model IEnumerable<Prac_Contact_Directory.Models.DistributionList>

@{
    ViewBag.Title = "Index";
}

<h2>Distribution List</h2>


<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm("Index", "DistributionLists", FormMethod.Get))
{
    @Html.TextBox("Searching")
    <input type="submit" value="Search" />
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DistributionListName)
        </th>
        <th></th>
    </tr>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="3" style="color:red">
                    Name doesn't match with the records
                </td>
            </tr>
        }

        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DistributionListName)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.DistributionListId }) |
                        @Html.ActionLink("Details", "Details", new { id = item.DistributionListId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.DistributionListId })
                    </td>
                </tr>
            }
        }

    </table>
